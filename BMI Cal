#include <iostream>
#include <math.h>
using namespace std;

int main(){
    float weight;
    float height;
    float bmi;
    std::cout << "Enter your weight (in kilograms): ";
    std::cin >> weight;

    std::cout << "Enter your height (in cm): ";
    std::cin >> height;
        // For metric system:
        height = height/100;
    bmi = weight / (height * height); // Or bmi = weight / pow(height, 2);

    // For imperial system:
    // bmi = (weight * 703) / (height * height);
    
    if (bmi<18.5){
        cout<<bmi<<"Your BMI is low ! You skinny ass";
    }else if (bmi >= 18.5 && bmi < 24.9){
        cout<<bmi<<"You are is FAT ASS !";
    }else if (bmi >= 25 && bmi < 29.9){
        cout<<bmi<<"You is GIGACHAD !";
    } else {
        std::cout << "You are obese." << std::endl;
    }
    return 0;
}
