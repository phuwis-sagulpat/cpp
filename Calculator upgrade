#include <iostream>
using namespace std;

int main() {
    cout << "Calculator" << endl;
    cout << "-------------------------" << endl;
    cout << "Enter for Modulus (num1 % num2)" << endl;
    cout << "-------------------------" << endl;

    int op, num1, num2;
    cin >> op;

    if (op == 1) {
        cout << "Adder Function" << endl;   
        cout << "Enter num1 : ";
        cin >> num1;
        cout << "Enter num2 : ";
        cin >> num2;
        cout << "-------------------------" << endl;
        cout << num1 << " + " << num2 << " = " << num1 + num2 << endl;

    } else if (op == 2) {
        cout << "Subtraction Function" << endl;
        cout << "Enter num1 : ";
        cin >> num1;
        cout << "Enter num2 : ";
        cin >> num2;
        cout << "-------------------------" << endl;
        cout << num1 << " - " << num2 << " = " << num1 - num2 << endl;

    } else if (op == 3) {
        cout << "Modulus Function" << endl;
        cout << "Enter num1 : ";
        cin >> num1;
        cout << "Enter num2 : ";
        cin >> num2;

        if (num2 == 0) {
            cout << "Error: Cannot divide by zero!" << endl;
        } else {
            cout << "-------------------------" << endl;
            cout << num1 << " % " << num2 << " = " << num1 % num2 << endl;
        }

    } else {
        cout << "Invalid data!" << endl;
    }

    return 0;
}
